def calculator():
    print("Welcome to the Simple Calculator!")
    
    # Input: two numbers
    Firstnum = float(input("Enter the first number: "))
    Secondnum = float(input("Enter the second number: "))
    
    # Input: operation choice
    print("Choose an operation:")
    print("a. Addition (+)")
    print("b. Subtraction (-)")
    print("c. Multiplication (*)")
    print("d. Division (/)")
    
    choice = input("Enter the operation number (a/b/c/d): ")
    
    # Perform calculation based on user choice
    if choice == 'a':
        result = Firstnum + Secondnum
        operation = '+'
    elif choice == 'b':
        result = Firstnum - Secondnum
        operation = '-'
    elif choice == 'c':
        result = Firstnum * Secondnum
        operation = '*'
    elif choice == 'd':
        if Secondnum != 0:
            result = Firstnum / Secondnum
            operation = '/'
        else:
            return 
    else:
        return 
    
    # Output: display the final result
    return f"The final result of {Firstnum} {operation} {Secondnum} is: {result}"

# Run the calculator
if __name__ == "__main__":
    print(calculator())
    